<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="contact">
      <h2>Edit</h2>
      <form class="contact-form" action="/contacts/<%= contact._id %>?_method=put" method="post">
        <div class="contact__form__item">
          <p><label for="name">Todo</label></p>
          <p><input type="text" id="name" name="name" value="<%= contact.name %>"></p>
        </div>
        <div class="contact__form__item">
          <p><label for="todo">Description</label></p>
          <p><input class="contact__form__description" type="textarea" id="todo" name="todo" value="<%= contact.todo %>"></p>
        </div>
        <!-- <div>
          <label for="phone">Phone</label>
          <input type="text" id="phone" name="phone" value="<%= contact.phone %>">
        </div> -->
        <div class="show__opt">
          <button class="show__btn"type="submit">Submit</button>
        </div>
      </div>
    </form>
  </body>
</html>
